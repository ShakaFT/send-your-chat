{% extends 'base.html.twig' %}

{% block title %}Chat app
{% endblock %}

{% block body %}
	<style>
		body::-webkit-scrollbar {
			display: none; /* for Chrome, Safari, and Opera */
		}
		.messages-container {
			-ms-overflow-style: none; /* for Internet Explorer, Edge */
			scrollbar-width: none; /* for Firefox */
			overflow-x: hidden;
			overflow-y: auto;
		}
		.nav-link {
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			width: 100%;
		}
		.nav-link:hover {
			background-color: #0d6efd;
		}
	</style>
	<div
		class="container-fluid text-bg-dark">
		<!-- Start of row -->
		<div
			class="row">
			<!-- Start of sidebar -->
			<div class="d-flex flex-column flex-shrink-0 p-3 col-sm-3 card text-bg-dark vh-100">
				<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
					<svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
					<span class="fs-4">Mes chats</span>
				</a>

				<hr>

				<button class="btn btn-outline-primary w-100 mb-2" type="button">
					Nouvelle discussion
					<i class="fas fa-plus mx-2"></i>
				</button>

				<div data-bs-spy="scroll" data-bs-target="#list-example" data-bs-smooth-scroll="true" tabindex="0" class="messages-container flex-grow-1">
					<ul class="nav nav-pills flex-column">
						{% for chat in chats %}
							<li class="nav-item w-100 p-1">
								<a href="{{ path('get_chats', {'currentChat': chat.getId()}) }}" class="nav-link {{currentChat is same as chat.getId()|trans ? 'active' : 'text-white'}}" aria-current="page">
									{{ chat.name }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="row w-100 m-auto gy-2">
					<a href="{{ path('create_server', {'currentChat': currentChat}) }}" class="btn btn-primary">Créer un serveur</a>
					<a href="{{ path('join_server', {'currentChat': currentChat}) }}" class="btn btn-outline-primary">Rejoindre un serveur</a>
				</div>
				<div>
					<hr>
					<div class="dropdown mb-2">
						<a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="https://github.com/varlopecar.png" alt="" width="32" height="32" class="rounded-circle me-2">
							<strong>{{ user.getUsername() }}</strong>
						</a>
						<ul class="dropdown-menu dropdown-menu-dark text-small shadow">
							<li>
								<a class="dropdown-item" href="{{path('edit_user')}}">Profile</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{path('reset_password')}}">Réinitialiser le mot de passe</a>
							</li>
							<li>
								<a class="dropdown-item text-danger" href="{{path('delete_user')}}">Supprimer le compte</a>
							</li>
							<li><hr class="dropdown-divider"></li>
							<li>
								<a class="dropdown-item" href="{{path('security_logout')}}">Déconnexion</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- End of sidebar -->
			{% if formMessage is not null and currentChat %}
				<div class="col-sm-9">
					<div
						class="p-4 d-flex vh-100 w-100 flex-column">
						<!-- Start of chat header -->
						<div class="row align-items-center">
							<div class="col-6">
								<h4 class="text-white">Chat</h4>
							</div>
							<div class="col-6">
								<a href="{{ path('settings_chat', {'chat': currentChat}) }}">
									<i class="fas fa-gear fa-lg text-white float-end"></i>
								</a>
							</div>
						</div>
						<!-- End of chat header -->
						<!-- Start of chat -->
						<div data-bs-spy="scroll" data-bs-target="#list-example" data-bs-smooth-scroll="true" tabindex="0" class="messages-container p-2 m-2 flex-grow-1">
							<ul class="list-unstyled d-flex justify-content-center flex-column m-auto">
								{% for message in messages %}
									<li class="d-flex justify-content-between mb-4">
										{% if message.getUser().getId() is not same as user.getId() %}
											<img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-5.webp" alt="avatar" class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
										{% endif %}
										<div class="card w-100 text-bg-light">
											<div class="card-header d-flex justify-content-between p-3">
												<p class="fw-bold mb-0">{{ message.getUser().getUsername() }}</p>
												<p class="text-muted small mb-0">
													<i class="far fa-clock"></i>
													{{ message.getTimeSinceNow() }}</p>
											</div>
											<div class="card-body">
												<p class="mb-0">
													{{ message.getContent() }}
												</p>
											</div>
										</div>
										{% if message.getUser().getId() is same as user.getId() %}
											<img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-5.webp" alt="avatar" class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						</div>
						<!-- End of chat -->
						<!-- Start of form -->
						<div class="row">
							{{ form_start(formMessage) }}
							{{ form_widget(formMessage.message) }}
							<button type="submit" class="btn btn-primary">Envoyer</button>
							{{ form_end(formMessage) }}
						</div>
						{# <div
							class="text-muted d-flex justify-content-start align-items-center pe-3 pt-3 mt-2 w-100">
							<!-- Style form -->
							{{ form_start(formMessage) }}
							<div class="col-12">
								{{ form_row(formMessage.message, {'attr': {'class': 'form-control form-control-lg'}}) }}
								<i class="fas fa-paper-plane fa-lg text-black float-end"></i>
							</div>
							{{ form_end(formMessage) }}
						</div> #}
						<!-- End of form -->
					</div>
				</div>
			{% endif %}
		</div>
		<!-- End of row -->
	</div>
{% endblock %}
