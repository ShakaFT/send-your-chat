{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	{% include 'chat/chats.html.twig' %}
	<script type="text/javascript">
		$(window).on('load', function () {
$('#chatModal').modal({backdrop: 'static', keyboard: false}).modal('show');
});
	</script>

	<div class="modal" id="chatModal">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				{{ form_start(form) }}
				<div class="modal-header">
					<h5 class="modal-title">{{ modalTitle }}</h5>
					<a href="{{ path('get_chats') }}" class="btn-close"></a>
				</div>
				<div class="modal-body">
					{{ form_rest(form) }}
					<b class="text-danger">{{error}}</b>
				</div>
				<div class="modal-footer">
					<a href="{{ path('get_chats') }}" type="button" class="btn btn-secondary">Annuler</a>
					<button type="submit" class="btn btn-primary">
						{{ confirmationTitle }}</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
